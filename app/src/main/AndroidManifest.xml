<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.makspasich.journal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SettingTypesMissingActivity"
            android:label="@string/types_missing"
            android:theme="@style/AppThemeMaterial" />
        <activity
            android:name=".activities.SettingStudentsActivity"
            android:label="@string/students"
            android:theme="@style/AppThemeMaterial" />
        <activity
            android:name=".activities.SettingGroupActivity"
            android:label="@string/setting_group"
            android:theme="@style/AppThemeMaterial" />
        <activity
            android:name=".activities.StartGroupActivity"
            android:theme="@style/AppThemeMaterial" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeMaterial.NoActionBar" />
        <activity
            android:name=".activities.SignInActivity"
            android:theme="@style/AppThemeMaterial.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>