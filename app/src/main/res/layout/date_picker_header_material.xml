<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/date_picker_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingStart="?attr/dialogPreferredPadding"
        android:paddingTop="16dp"
        android:paddingEnd="?attr/dialogPreferredPadding"
        android:paddingBottom="18dp">

        <TextView
            android:id="@+id/date_picker_header_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-8dp"
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="-8dp"
            android:layout_marginBottom="-8dp"
            android:background="?attr/selectableItemBackground"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="false"
            android:nextFocusForward="@+id/prev"
            android:padding="8dp" android:textColor="@android:color/white"
            android:pointerIcon="hand"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/date_picker_header_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:pointerIcon="hand" android:textColor="@android:color/white"

            android:textSize="34dp" />
    </LinearLayout>
</LinearLayout>
